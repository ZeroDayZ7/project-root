{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/utils": ["./utils*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "logs"]
}