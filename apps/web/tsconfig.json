{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"], // Potrzebne dla React/Next.js
    "noEmit": true, // Next.js nie emituje kodu, używa własnego kompilatora
    "incremental": true, // Szybsza kompilacja
    "isolatedModules": true, // Wymagane przez Next.js
    // "jsx": "react-jsx", // Zachowuje JSX dla Next.js
    "strict": true,
    "jsx": "preserve",
    "allowImportingTsExtensions": true,
    "paths": {
      "@/components/*": ["./components/*"],
      "@/context/*": ["./context/*"],
      "@/providers/*": ["./providers/*"],
      "@/lib/*": ["./lib/*"],
      "@/mocks/*": ["../mocks/*"],
      "@/services/*": ["./src/services/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src/**/*", ".next/types/**/*.ts"]
}
