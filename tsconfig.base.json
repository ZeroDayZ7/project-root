// tsconfig.base.json
{
  "files": [],
  "references": [
    { "path": "./apps/gateway" },
    { "path": "./apps/web" },
    { "path": "./packages/common" },
    { "path": "./packages/ui" },
    { "path": "./services/auth-services" }
  ],
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "disableReferencedProjectLoad": true    
  },
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*",
    "services/*/src/**/*"
  ],
  "exclude": ["**/node_modules", "**/dist", "**/logs"]
}
