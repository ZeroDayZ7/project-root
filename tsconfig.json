{
  "compilerOptions": {
    "target": "ES2024", // Nowoczesny JavaScript, kompatybilny z Node.js i przeglądarkami
    "module": "NodeNext", // ESM dla spójności z Express i Next.js
    "moduleResolution": "NodeNext", // Poprawna obsługa ESM
    "strict": true, // Wymuszenie ścisłego typowania
    "esModuleInterop": true, // Wsparcie dla importów CommonJS
    "allowSyntheticDefaultImports": true, // Dla importów bez default
    "resolveJsonModule": true, // Importowanie JSON
    "skipLibCheck": true, // Pomija sprawdzanie typów w node_modules
    "forceConsistentCasingInFileNames": true, // Zapobiega problemom z wielkością liter
    "baseUrl": ".", // Bazowy katalog dla paths
    "paths": {
      "@neo/*": ["./packages/*/src"],
      "@neo-dist/*": ["./packages/*/dist"],
      "@common/*": ["./packages/common/src/*"],
      "@types/*": ["./packages/common/src/types/*"]
    }
  },
  "include": ["packages/*/src/**/*", "apps/*/src/**/*", "types/**/*"],
  "exclude": ["node_modules", "**/dist", "**/build"]
}
